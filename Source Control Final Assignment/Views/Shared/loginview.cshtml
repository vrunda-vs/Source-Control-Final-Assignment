<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="margin:0px;padding:0px;background:#000;padding-bottom:100px">
    <div class="container-fluid" style="overflow: hidden;margin:0px;padding:0px;">
        <div class="col-md-12" style="background:#800;text-align:center;">
            <h2 style="color:#fff;text-align:center;min-height:100px;margin:0px;vertical-align:middle;line-height:100px;">Management System</h2>
        </div>
    </div>

    <div class="container" style="background:#000;margin:0;padding:0;">
        <div class="align-items-center" style="align-content:center;margin-top:80px;">
            @RenderBody()
        </div>



    </div>
    <div class="col-md-12" style="bottom:0;position:fixed">
        <footer class="col-md-12" style="text-align:center;position:absolute;bottom:0;right:0;left:0;background:#800;color:#fff;min-height:50px;">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
